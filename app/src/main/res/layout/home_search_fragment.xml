<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

    <!--  没有数据  -->
    <LinearLayout
        android:id="@+id/nohave_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_78"
        android:orientation="vertical"
        android:visibility="invisible">
        <ImageView
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_89"
            android:src="@mipmap/meiyoushop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抱歉，没有找到商品额~~"
            android:textColor="#666666"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_20"
            />
    </LinearLayout>

</RelativeLayout>