<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_data"
            android:layout_width="@dimen/dp_141"
            android:layout_height="@dimen/dp_161"
            android:background="@drawable/rxxp_shape"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/search_imageView"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_102"
                android:background="@drawable/shape_common"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/search_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据"
                android:textSize="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#666666"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/search_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据"
                    android:textSize="@dimen/dp_14"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ff0000"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_8"
                    />
                <TextView
                    android:id="@+id/search_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据"
                    android:textSize="@dimen/dp_10"
                    android:textColor="#666666"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_8"
                    />
            </RelativeLayout>
        </LinearLayout>


</LinearLayout>